{
  "name": "@ls-age/expose",
  "version": "0.3.0",
  "description": "The easy way to expose a module for CLI usage",
  "main": "out/index.js",
  "scripts": {
    "compile": "babel -d out src",
    "flow": "flow",
    "lint": "eslint src test",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ls-age/expose.git"
  },
  "author": "Lukas Hechenberger <npm@ls-age.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ls-age/expose/issues"
  },
  "homepage": "https://github.com/ls-age/expose#readme",
  "devDependencies": {
    "@ls-age/bump-version": "^0.1.1",
    "@ls-age/eslint-config": "^0.8.0",
    "ava": "^1.1.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "conventional-changelog-cli": "^1.3.5",
    "conventional-github-releaser": "^2.0.0",
    "eslint": "^4.11.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.64.0",
    "greenkeeper-lockfile": "^1.13.1",
    "standard-version": "^4.2.0"
  },
  "dependencies": {
    "@ls-age/logger": "^0.5.0-beta.0",
    "chalk": "^2.3.0",
    "string-length": "^2.0.0",
    "yup": "^0.24.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "extends": "@ls-age",
    "rules": {
      "compat/compat": "off"
    }
  },
  "babel": {
    "presets": [
      "flow",
      [
        "env",
        {
          "targets": {
            "node": 8
          }
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "standard-version": {
    "skip": {
      "changelog": true,
      "tag": true
    },
    "scripts": {
      "postbump": "./node_modules/.bin/conventional-changelog -r 0 -i CHANGELOG.md --same-file --preset angular"
    }
  }
}
